#!/bin/sh
#
# $NetBSD: INSTALL,v 1.1.1.1 2003/07/09 17:17:14 xtraeme Exp $

: ${PKGNAME:=$1}
: ${STAGE:=$2}

case ${STAGE} in
PRE-INSTALL)
	;;

POST-INSTALL)
	echo "-------------------------------"
	echo "Initializing MySQL databases..."
	echo "-------------------------------"
	${PKG_PREFIX}/bin/mysql_install_db --force
	;;

*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
