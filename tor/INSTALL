#!@SH@
#
# $NetBSD: INSTALL,v 1.1 2006/03/26 16:16:20 tvierling Exp $

PKG_HOME="@PKG_HOME@"
TOR_USER="@TOR_USER@"
TOR_GROUP="@TOR_GROUP@"

case "${STAGE}" in
PRE-INSTALL)
    ${MKDIR} ${PKG_SYSCONFDIR}/tor
    ${MKDIR} -m 0700 ${PKG_HOME}
    ${CHOWN} ${TOR_USER}:${TOR_GROUP} ${PKG_HOME}
    ;;
esac
