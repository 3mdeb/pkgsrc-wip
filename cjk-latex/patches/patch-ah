+sjisconv:
+	$(CC) $(CFLAGS) -o $@ sjisconv.c
+
+build: sjisconv
+
+all: build
+
+install: all
+	$(BSD_INSTALL_PROGRAM) sjisconv $(PREFIX)/bin
+	$(BSD_INSTALL_SCRIPT) sjislatex $(PREFIX)/bin
+	$(BSD_INSTALL_MAN) sjisconv.1 $(PREFIX)/man/man1
+
+clean:
+	rm -f sjisconv
