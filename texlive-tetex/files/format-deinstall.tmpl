#
# Delete format files.
#

case ${STAGE} in
DEINSTALL)
	format_names="@FORMAT_NAMES@"
	for f in $format_names ; do
		@CAT@ @PREFIX@/share/texmf/fmtutil/format.$f.cnf |
		@GREP@ "^[^#]" |
		while read format engine junk; do
			@RM@ -f @VARBASE@/lib/texmf/web2c/$engine/$format.base
			@RM@ -f @VARBASE@/lib/texmf/web2c/$engine/$format.fmt
			@RM@ -f @VARBASE@/lib/texmf/web2c/$engine/$format.log
			@RM@ -f @VARBASE@/lib/texmf/web2c/$engine/$format.mem
		done
	done
	@FIND@ -d @VARBASE@/lib/texmf -type d -empty -exec @RMDIR@ {} \;
	@MKTEXLSR@ @VARBASE@/lib/texmf
        ;;
*)
	;;
esac
